{
    "global": { "show_in_menu_bar": false },
    "profiles": [
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "Enable delete in Finder",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": ["^com\\.apple\\.finder$"],
                                        "type": "frontmost_application_if"
                                    }
                                ],
                                "from": { "key_code": "delete_forward" },
                                "to": [
                                    {
                                        "key_code": "delete_or_backspace",
                                        "modifiers": ["command"]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Open Snipping Tool - Desktop",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "s",
                                    "modifiers": { "mandatory": ["right_command"] }
                                },
                                "to": [
                                    {
                                        "key_code": "4",
                                        "modifiers": ["command", "shift"]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Open Snipping Tool - Clipboard",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "s",
                                    "modifiers": { "mandatory": ["shift", "right_command"] }
                                },
                                "to": [
                                    {
                                        "key_code": "4",
                                        "modifiers": ["control", "command", "shift"]
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Hold escape for hyper",
                        "manipulators": [
                            {
                                "type": "basic",
                                "from": {
                                    "key_code": "escape",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to_if_held_down": [
                                    {
                                        "key_code": "left_shift",
                                        "modifiers": ["left_command", "left_control", "left_option"]
                                    }
                                ],
                                "to_if_alone": [
                                    {
                                        "key_code": "escape"
                                    }
                                ],
                                "parameters": {
                                    "basic.to_if_held_down_threshold_milliseconds": 300,
                                    "basic.to_if_alone_timeout_milliseconds": 299
                                }
                            }
                        ]
                    },
                    {
                        "description": "Launch apps with right command",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "b",
                                    "modifiers": { "mandatory": ["right_command"], "optional": ["any"] }
                                },
                                "to": [
                                    {
                                        "shell_command": "/bin/bash -lc '/usr/bin/open -a \"Arc\" && /usr/bin/osascript -e \"tell application \\\"System Events\\\" to keystroke \\\"l\\\" using command down\"'"
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "t",
                                    "modifiers": { "mandatory": ["right_command"], "optional": ["any"] }
                                },
                                "to": [
                                    {
                                        "shell_command": "/usr/bin/open -a \"Ghostty\""
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "a",
                                    "modifiers": { "mandatory": ["right_command"], "optional": ["any"] }
                                },
                                "to": [
                                    {
                                        "shell_command": "/usr/bin/open -a \"ChatGPT\""
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "p",
                                    "modifiers": { "mandatory": ["right_command"], "optional": ["any"] }
                                },
                                "to": [
                                    {
                                        "shell_command": "/bin/bash -c 'if ! pgrep -x \"ColorSlurp\" >/dev/null; then open -a \"ColorSlurp\"; sleep 0.35; fi; osascript -e \"tell application \\\"System Events\\\" to key code 35 using {command down, control down, option down, shift down}\"'"
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "name": "Default profile",
            "selected": true,
            "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" }
        }
    ]
}
