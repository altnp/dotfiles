{
  "$schema": "https://opencode.ai/config.json",
  "theme": "dark-modern",
  "experimental": {
  },
  "permission": {
    "skill": {
      "*": "allow",
      "agent-browser": "deny"
    },
    "lsp": "allow",
    "context7*": "deny",
    "gh_grep*": "deny",
    "chrome-devtools*": "deny",
    "bash": {
      "*": "ask",
      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git rev-parse*": "allow",
      "git describe*": "allow",
      "git blame*": "allow",
      "git shortlog*": "allow",
      "git reflog*": "allow",
      "git ls-files*": "allow",
      "git ls-tree*": "allow",
      "git cat-file*": "allow",
      "git for-each-ref*": "allow",
      "git show-ref*": "allow",
      "git grep*": "allow",
      "git branch --list*": "allow",
      "git tag -l*": "allow",
      "git tag --list*": "allow",
      "git stash list*": "allow",
      "git worktree list*": "allow",
      "git submodule status*": "allow",
      "git remote": "allow",
      "git remote -v": "allow",
      "git config --list": "allow",
      "git config --get*": "allow",
      "git config --get-all*": "allow",
      "git branch --show-current": "allow",
      "gh pr view *": "allow",
      "gh pr diff *": "allow",
      "npm install*": "allow",
      "npm uninstall*": "allow",
      "npm run dev*": "allow",
      "npm run start*": "allow",
      "npm run test*": "allow",
      "npm run lint*": "allow",
      "npm start*": "allow",
      "npm test*": "allow",
      "pnpm install*": "allow",
      "pnpm add*": "allow",
      "pnpm remove*": "allow",
      "pnpm uninstall*": "allow",
      "pnpm run dev*": "allow",
      "pnpm run start*": "allow",
      "pnpm run test*": "allow",
      "pnpm run lint*": "allow",
      "pnpm dev*": "allow",
      "pnpm start*": "allow",
      "pnpm test*": "allow",
      "pnpm lint*": "allow",
      "bun install*": "allow",
      "bun add*": "allow",
      "bun remove*": "allow",
      "bun uninstall*": "allow",
      "bun run dev*": "allow",
      "bun run start*": "allow",
      "bun run test*": "allow",
      "bun run lint*": "allow",
      "bun test*": "allow",
      "ls *": "allow",
      "mkdir *": "allow",
      "mv *": "allow",
      "pwd": "allow",
      "nvm *": "allow",
      "man *": "allow",
      "rm -rf ./.agents/*": "allow",
      "py *": "ask",
      "python *": "ask",
      "python3 *": "ask",
      "node *": "ask",
    },
  },
  "instructions": [
    "~/.config/opencode/instructions.md"
  ],
  "agent": {
    "build": {
      "enabled": true,
    },
    "general": {
      "enabled": false,
      "prompt": ""
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "oauth": false
    },
    "chrome-devtools": {
      "type": "local",
      "command": [ "npx", "-y", "chrome-devtools-mcp@latest" ]
    }
  },
  "keybinds": {
    "editor_open": "ctrl+e"
  }
}
