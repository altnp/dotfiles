#!/bin/zsh
{{ if ne .chezmoi.os "darwin" -}}
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"
{{ end }}
export HISTFILE="$ZDOTDIR/.histfile"
export HISTSIZE=10000
export SAVEHIST=10000

export LESS="-R -M -i -j3 -F"

export LESSHISTFILE="$XDG_CACHE_HOME/less/history"
export GRADLE_USER_HOME="$XDG_DATA_HOME/gradle"
export CARGO_HOME="${XDG_DATA_HOME}/cargo"
export npm_config_cache="${XDG_CACHE_HOME}/npm"
export NPM_CONFIG_USERCONFIG="${XDG_CONFIG_HOME}/npm/npmrc"
export NODE_REPL_HISTORY="$XDG_DATA_HOME/node_repl_history"
export PNPM_HOME="${XDG_DATA_HOME}/pnpm"
export RUSTUP_HOME="${XDG_DATA_HOME}/rustup"
export GOPATH="${XDG_DATA_HOME}/go"
export PYTHONSTARTUP="$XDG_CONFIG_HOME/python/pythonrc"
export PYTHON_HISTORY="$XDG_STATE_HOME/python/history"
export DOTNET_ROOT="/lib/dotnet"
export TF_CLI_CONFIG_FILE="${XDG_CONFIG_HOME}/terraform/.terraformrc"
export ANDROID_HOME='/opt/android-sdk'
export ANDROID_SDK_ROOT='/opt/android-sdk'
export ANDROID_AVD_HOME=${XDG_CONFIG_HOME}/android/avd/
export PATH="${PATH}:${ANDROID_HOME}/platform-tools"
export PATH="${PATH}:${ANDROID_HOME}/emulator"
export AWS_CONFIG_FILE="$XDG_CONFIG_HOME/aws/config"
export AWS_SHARED_CREDENTIALS_FILE="$XDG_CONFIG_HOME/aws/credentials"
export IPYTHONDIR="$XDG_CONFIG_HOME/ipython"
export DOTNET_CLI_HOME="$XDG_DATA_HOME/dotnet"
export CP_HOME_DIR="$XDG_CONFIG_HOME/cocoapods"
export CP_CACHE_DIR="$XDG_CACHE_HOME/cocoapods"
export CP_REPOS_DIR="$XDG_CONFIG_HOME/cocoapods/repos"
export GEM_HOME="$XDG_DATA_HOME/gem"
export GEM_PATH="$XDG_DATA_HOME/gem"
export LEMMINX_HOME="$XDG_DATA_HOME/lemminx"
export MITMPROXY_BASE_DIR="$XDG_CONFIG_HOME/mitmproxy"
export SBCONFIG_CONFIG_DIR="$XDG_CONFIG_HOME/storybook"
export SWIFTPM_HOME="$XDG_DATA_HOME/swiftpm"
export SWIFTPM_CONFIG_DIR="$XDG_CONFIG_HOME/swiftpm"
export TEALDEER_CONFIG_DIR="$XDG_CONFIG_HOME/tealdeer"
export CODEX_HOME="$XDG_CONFIG_HOME/codex"

{{ if eq .chezmoi.os "darwin" -}}
export JENV_ROOT="$XDG_DATA_HOME/jenv"
{{- end }}
{{ if ne .chezmoi.os "darwin" }}
typeset -U PATH path
path=(
    "$HOME/.local/bin"
    "$HOME/bin"
    "$PNPM_HOME"
    "$CARGO_HOME/bin"
    "$GOPATH/bin"
    # shellcheck disable=SC2206
    $path
    "$HOME/.dotnet/tools"
)
{{- end }}

export OPENCODE_EXPERIMENTAL_LSP_TOOL=true
