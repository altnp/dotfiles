#!/bin/zsh
alias py=python
alias python=python3
alias tf=terraform
alias k8s=kubectl
alias azo='az-open'
alias gho='gh browse'
alias ghc='gh copilot suggest'
alias repo='invoke-repo'
alias r='invoke-repo'
alias rmrf='rm -rf'
alias wget="wget --hsts-file='${XDG_CACHE_HOME}/wget-hsts'"
alias bwul='export BW_SESSION=$(bw unlock --raw)'
#alias fzf='fzf-tmux -p80%,60%'

alias l='eza -la --group-directories-first --color=auto --icons=always'
alias ls='eza -a --group-directories-first --color=auto --icons=always'
alias lt='eza -a -T --group-directories-first --color=auto --level 3 --icons=always'

alias cat='bat --style=plain --paging=never'

az() {
    local _old_warn_set=0
    if [[ -n "${PYTHONWARNINGS+x}" ]]; then
        _old_warn_set=1
        local _old_warn="$PYTHONWARNINGS"
    fi
    export PYTHONWARNINGS="ignore"
    command az "$@"
    if [[ $_old_warn_set -eq 1 ]]; then
        export PYTHONWARNINGS="$_old_warn"
    else
        unset PYTHONWARNINGS
    fi
}
